<h1>Listing answers</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Is correct</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.question_id %></td>
    <td><%= answer.is_correct %></td>
    <td><%= answer.content %></td>
    <td><%= link_to 'Show', answer_path(answer) %></td>
    <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
    <td><%= link_to 'Destroy', answer_path(answer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<% if params[:question_id] %>
  <%= link_to 'New Answer', new_answer_path(question_id: @question.id) %>
<% else %>
  <%= link_to 'New Answer', new_answer_path %>
<% end %>

<br />
